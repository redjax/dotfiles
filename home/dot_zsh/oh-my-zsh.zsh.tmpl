export ZSH="$HOME/.oh-my-zsh"

## Set theme. Use 'random' to load a random theme each session.
#  Some defaults I like:
#  bira fino-time gianu half-life lambda lukerandall maran mortalscumbag murilasso xiong-chiamiov/xiong-chiamiov-plus
ZSH_THEME="xiong-chiamiov-plus"

## Set list of random themes ZSH can pick from.
# ZSH_THEME_RANDOM_CANDIDATES=( "robbyrussell" "agnoster" )

## Enable case-sensitive completion (like Bash)
CASE_SENSITIVE="true"

## Enable hyphen-insensitive completion, which makes _ and - interchangable
HYPHEN_INSENSITIVE="false"

## Uncomment one of the following lines to change the auto-update behavior
#  disabled = disable automatic updates
#  auto = update automatically without asking
#  reminder = just remind me to update when it's time
zstyle ':omz:update' mode reminder

## Auto-update frequency (in days)
zstyle ':omz:update' frequency 13
